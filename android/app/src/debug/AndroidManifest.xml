<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Add any additional permissions your app needs here -->

    <application
        android:icon="@mipmap/ic_launcher" <!-- Adaptive icon for devices that support it -->
        android:roundIcon="@mipmap/ic_launcher_round" <!-- Round icon for specific devices -->
        android:label="@string/app_name" <!-- The name of your app -->
        android:theme="@style/LaunchTheme"> <!-- Launch theme for your app -->

        <!-- Specify your activity entry point -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
